@{
    ViewData["Title"] = "Home";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox" align="center">
        <div class="item active">
            <img src="~/images/3.jpg" class="img-responsive" width="800" height="400"/>
            <div class="carousel-caption" role="option">
                <p style="color:white; font-size:48px; margin:inherit;">
                    Контактная информация
                    <a class="btn btn-default" href="/Home/Contact">
                        Подробнее...
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/2.jpg" alt="Visual Studio" class="img-responsive" width="800" height="400" />
            <div class="carousel-caption" role="option">
                <p style="color:white; font-size:48px; margin:inherit;">
                    О компании
                    <a class="btn btn-default" href="/Home/About">
                        Подробнее...
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/1.jpg" alt="Microsoft Azure" class="img-responsive" width="800" height="400" />
            <div class="carousel-caption" role="option">
                <p style="color:white; font-size:48px; margin:inherit;">
                    Стать партнером
					<a class="btn btn-default" href="/Home/Download">
						Подробнее...
					</a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



